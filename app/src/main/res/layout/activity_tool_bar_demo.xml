<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cesecsh.test.toolBar.ToolBarDemoActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        app:contentInsetStart="0dp"
        >
        <!-- app:rightViewCheckBoxHeight="50dp"-->
        <!--app:rightViewCheckBoxWidth="50dp"-->
        <com.cesecsh.baseframelibrary.ui.widget.toolBar.XToolBar

            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            app:leftText="返回"
            app:leftTextGravity="left"
            app:leftViewMarginLeft="5dp"
            app:middleEditBackground="@drawable/edit_bg"
            app:middleEditColor="#fff"
            app:middleEditGravity="center_vertical"
            app:middleEditHint="测试编辑框"
            app:middleEditLeftImage="@mipmap/search"
            app:middleEditMargin="10dp"
            app:middleEditPadding="5dp"
            app:middleEditTextSize="12sp"
            app:middleEditWidth="10dp"
            app:rightText="提交"
            app:rightViewMarginRight="5dp"
            />
    </android.support.v7.widget.Toolbar>

    <com.cesecsh.baseframelibrary.ui.widget.toolBar.XToolBar
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_marginTop="5dp"
        android:background="@color/colorPrimary"
        app:leftImageSrc="@mipmap/icon_back"
        app:leftViewMarginLeft="5dp"
        app:middleText="测试标题"
        app:rightImageSrc="@drawable/selector_collection_check_box"
        app:rightViewMarginRight="5dp"
        />

    <com.cesecsh.baseframelibrary.ui.widget.toolBar.XToolBar
        android:id="@+id/x_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_marginTop="5dp"
        android:background="@color/colorPrimary"
        app:leftImageSrc="@mipmap/icon_back"
        app:leftViewMarginLeft="5dp"
        app:middleText="测试标题"
        app:middleTextRightImage="@mipmap/back"
        app:rightCheckBoxButton="@drawable/selector_collection_check_box"
        />

    <com.cesecsh.baseframelibrary.ui.widget.toolBar.XToolBar
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_marginTop="5dp"
        android:background="@color/colorPrimary"
        app:leftImageSrc="@mipmap/icon_back"
        app:leftViewMarginLeft="5dp"
        app:middleText="测试标题"
        app:rightImageSrc="@mipmap/location"
        app:rightViewMarginRight="5dp"
        >

